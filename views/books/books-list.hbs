{{!-- views/books/books-list.hbs --}}

<h1>BOOKS</h1>

{{!-- since we passed allTheBooksFromDB as `books`,
we can iterate over it here with #each--}}

{{#each books}}
  <div>
    <h3>{{title}}</h3>
    <p>By: {{author}}</p> {{!-- additional book property --}}
    <a href="/books/details/{{_id}}">See details</a> {{!-- link that points to the details page --}}
    <a href="/books/edit/{{_id}}">Edit</a> 
    <form action="/books/delete/{{_id}}" method="GET">
      <button type="submit">Delete</button>
    </form>
  </div>
{{/each}}

